{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2015"],
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    // path aliases
    "baseUrl": "./src",
    "paths": {
      "@container": ["container.ts"],
      "@logger": ["config/logger.ts"],
      "@config/*": ["config/*"],
      "@domain/*": ["domain/*"],
      "@adapters/*": ["adapters/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
