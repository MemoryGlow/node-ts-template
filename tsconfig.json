{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    // path aliases
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@domain/*": ["domain/*"],
      "@adapters/*": ["adapters/*"],
      "@container": ["container.ts"],
      "@logger": ["config/logger.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
